{
  "name": "@mxenabled/sso-api-proxy",
  "version": "1.3.3",
  "description": "Proxy Widget SSO URL requests to our Platform API.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.mx.com/mx/widget-sso-api-proxy"
  },
  "scripts": {
    "prepack": "npm run clean && npm run build",
    "start": "node build/src/cli.js",
    "clean": "[ -d build ] && rm -r build || true",
    "build": "npm run generate-package-info && npm run compile",
    "compile": "tsc",
    "test": "tap --ts test/*_test.ts",
    "test:coverage": "npm test -- --coverage-report html",
    "format": "npm run prettier -- -w",
    "prettier": "prettier src test",
    "lint": "eslint src test",
    "spellcheck": "cspell $(git ls-files)",
    "generate-package-info": "ts-node bin/generate-package-info.ts"
  },
  "files": [
    "build/src"
  ],
  "bin": {
    "mx-sso-api-proxy": "build/src/cli.js"
  },
  "dependencies": {
    "commander": "^9.4.0",
    "cosmiconfig": "^7.0.1",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "inquirer": "^8.2.5",
    "morgan": "^1.10.0",
    "mx-platform-node": "^0.11.2",
    "node-fetch": "^3.2.0",
    "open": "^8.4.0",
    "wrap-text": "^1.0.9",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/inquirer": "^9.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.19",
    "@types/supertest": "^2.0.12",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "cspell": "^6.10.1",
    "eslint": "^8.24.0",
    "msw": "^0.47.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": false
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-trailing-spaces": "error",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    },
    "ignorePatterns": [
      "**/node_modules/**",
      "**/build/**"
    ]
  },
  "tap": {
    "lines": 90,
    "functions": 90,
    "branches": 90,
    "statements": 90,
    "check-coverage": false
  }
}
